<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph.xml"
    app:startDestination="@id/onboardFragment">

    <fragment
        android:id="@+id/onboardFragment"
        android:name="com.example.rickandmorty.fragments.OnboardFragment"
        android:label="OnboardFragment"
        tools:layout="@layout/fragment_onboard">
        <action
            android:id="@+id/action_onboardFragment_to_signInFragment"
            app:destination="@id/signInFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.example.rickandmorty.fragments.SignInFragment"
        android:label="SignInFragment"
        tools:layout="@layout/fragment_sign_in">
        <argument
            android:name="user"
            app:argType="com.example.rickandmorty.models.User"
            app:nullable="true"
            android:defaultValue="@null" />
        <action
            android:id="@+id/action_signInFragment_to_characterListFragment"
            app:destination="@id/characterListFragment"
            />
        <action
            android:id="@+id/action_signInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment"
            />
        </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.rickandmorty.fragments.SignUpFragment"
        android:label="SignUpFragment"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/action_signUpFragment_to_signInFragment"
            app:destination="@id/signInFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/characterListFragment"
        android:name="com.example.rickandmorty.fragments.CharacterListFragment"
        android:label="CharacterListFragment"
        tools:layout="@layout/fragment_chat" />
</navigation>